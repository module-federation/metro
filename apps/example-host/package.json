{
  "name": "host",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "android:release": "react-native run-android --no-packager --mode 'Release'",
    "ios:release": "react-native run-ios --no-packager --mode 'Release'",
    "lint": "eslint .",
    "dev": "nodemon --config ../../nodemon.json --exec yarn start",
    "start": "react-native start --reset-cache --client-logs",
    "pods": "(cd ios && bundle install && bundle exec pod install)",
    "test": "jest",
    "adbreverse": "yarn workspaces foreach --all -p --include=example-mini --include=example-nested-mini run adbreverse",
    "e2e:prepare:ios": "yarn workspaces foreach --all -p --include=example-mini --include=example-nested-mini run serve:ios",
    "e2e:prepare:android": "yarn workspaces foreach --all -p --include=example-mini --include=example-nested-mini run serve:android",
    "e2e:run": "maestro test e2e"
  },
  "dependencies": {
    "lodash": "4.16.6",
    "react": "19.0.0",
    "react-native": "0.79.0",
    "zephyr-metro-plugin": "0.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@module-federation/runtime": "^0.11.4",
    "@react-native-community/cli": "18.0.0",
    "@react-native-community/cli-platform-android": "18.0.0",
    "@react-native-community/cli-platform-ios": "18.0.0",
    "@react-native/babel-preset": "0.79.0",
    "@react-native/eslint-config": "0.79.0",
    "@react-native/metro-config": "0.79.0",
    "@react-native/typescript-config": "0.79.0",
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "module-federation-metro": "workspace:*",
    "nodemon": "^3.1.9",
    "prettier": "2.8.8",
    "react-test-renderer": "19.0.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
