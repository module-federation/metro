{
  "name": "example-host",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "rnef run:android",
    "ios": "rnef run:ios",
    "android:release": "rnef run:android --variant 'Release'",
    "ios:release": "rnef run:ios --configuration 'Release'",
    "lint": "eslint .",
    "dev": "nodemon --config ../../nodemon.json --exec yarn start",
    "start": "rnef start --reset-cache --client-logs",
    "pods": "(cd ios && bundle install && bundle exec pod install)",
    "test": "jest",
    "adbreverse": "yarn workspaces foreach --all -p --include=example-mini --include=example-nested-mini run adbreverse",
    "e2e:prepare:ios": "yarn workspaces foreach --all -p --include=example-mini --include=example-nested-mini run serve:ios",
    "e2e:prepare:android": "yarn workspaces foreach --all -p --include=example-mini --include=example-nested-mini run serve:android",
    "e2e:run": "maestro test e2e"
  },
  "dependencies": {
    "lodash": "4.16.6",
    "react": "19.0.0",
    "react-native": "0.79.0",
    "zephyr-metro-plugin": "/Users/denisbelocerkovec/Developer/zephyr/zephyr-packages/libs/zephyr-metro-plugin"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@module-federation/metro-plugin-rnef": "workspace:*",
    "@module-federation/runtime": "^0.11.4",
    "@react-native/babel-preset": "0.79.0",
    "@react-native/eslint-config": "0.79.0",
    "@react-native/metro-config": "0.79.0",
    "@react-native/typescript-config": "0.79.0",
    "@rnef/cli": "^0.7.20",
    "@rnef/platform-android": "^0.7.20",
    "@rnef/platform-ios": "^0.7.20",
    "@rnef/plugin-metro": "^0.7.20",
    "@types/jest": "^29.5.13",
    "@types/lodash": "^4",
    "@types/react": "^19.0.0",
    "@types/react-test-renderer": "^19.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "module-federation-metro": "workspace:*",
    "nodemon": "^3.1.9",
    "prettier": "2.8.8",
    "react-test-renderer": "19.0.0",
    "typescript": "5.0.4"
  },
  "engines": {
    "node": ">=18"
  }
}
